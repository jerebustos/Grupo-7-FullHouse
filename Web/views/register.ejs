<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include ('partials/head.ejs') %>
        <link rel="stylesheet" href="css/register.css">
      </head>
    
   
<body>

    <!--Header - menu-->
    <header>
  

        <div class="header-content">

            <div class="logo">
                <img src="/img/FullhouseV7.png" class="logotipo">
                
            </div>

            <div class="menu" id="show-menu">

                <nav>
                    <ul>
                        <li><a href="/"> <i class="fas fa-home"></i> Inicio</a></li>
                        <li><a href="/login"> <i class="fas fa-user"></i></i>Logeate</a></li>
                        <li class="menu-selected"><a href="/register" class="text-menu-selected"> 
                            <i class="fas fa-file-alt"></i>Registrate</a></li>
                            <a href="/carrito"><li><i class="fas fa-shopping-cart icono_carrito"></i></li></a>
                    </ul>  
                </nav>

            </div>

        </div>

        
        <img src="img/FullHouse-Icono.ico" alt="" class="logoPequeño">
        
        <div id="icon-menu">
            <i class="fas fa-bars"></i>
        </div>
        <div class="box">
          <div class="container-1">
              <span class="icon"><i class="fa fa-search"></i></span>
              <input type="search" id="search" placeholder="Click para buscar..." />
          </div>
        </div>
    
    </header>

<main class="register">
    <div class="formulario">
    <form action="/" method="POST">
        
        <input type="text" name="name" placeholder="Nombre y apellido">
        <input type="text" name="user" placeholder="Nombre de usuario">
        <input type="email" name="email" placeholder="E-mail">
        <br>
        <label for="birth_date"><h3>Fecha de nacimiento</h3></label>
        <br>
        <input type="date" name="birth_date" id="birth_date">
        <br>
        <input type="text" name="addres" placeholder="Domicilio">
        <br>
        <br>
        <br>
       
        <h3>Elegí tu foto de usuario</h3>
        <input type="file" name="avatar">
        <br>
        <br>
        <input type="password" name="pass" placeholder="Elegí tu contraseña">
        <input type="password" name="pass_confirm" placeholder="Confirmá tu contraseña">
        <br>
        <br>
        <button class="boton" type="submit" value="Enviar">Enviar</button>
        <button class="boton" type="reset" value="Borrar">Borrar</button>
        <br>
        <br>
    </form>
</div>
</main>
    
   

        <!-- footer -->
      <%-include ('partials/footer.ejs') %> 
    <!-- footer -->

    
        <script src="https://kit.fontawesome.com/41bcea2ae3.js" crossorigin="anonymous"></script>
        <script src="js/script.js"></script>

</body>
</html>
