<!DOCTYPE html>
<html>
  <head>
    <%-include ('../partials/head') %>
    <link href='/css/producto.css' rel="stylesheet">
  </head>
    
   
  
<body>

   
  <%-include ('../partials/header') %>
    
    <main class="main">
    

    <div class="contenedor">
      <div class="poducto">
       <img class="imagen" src= "/img/products/<%= productoDetalle.image%> " > 
       <div class="columna">
       <h1><%=productoDetalle.name%> </h1>
       <br>
       <ul>
       <li>
         <h3>Caracteristicas generales</h3>
         <div>
           <div class="detalle1">
            <div class="specName">Color</div>
            <div class="specValue"><%=productoDetalle.color.name%> </div>
           </div>
           <div class="detalle2">
            <div class="specName">Marca</div>
            <div class="specValue"><%=productoDetalle.brand.name%> </div>
           </div>
           <div class="detalle3">
            <div class="specName">Modelo</div>
            <div class="specValue"><%=productoDetalle.model%> </div>
           </div>
           <div class="detalle4">
            <div class="specName">Accesorios</div>
            <div class="specValue"><%=productoDetalle.accessory%></div>
           </div>
           <h3>Descipci√≥n</h3>

           <p class="product-detail-description">
						<%= productoDetalle.description%>
					</p>
         </div>
       </li>

       </ul>
       <br>

       <h2>$<%= toThousand(productoDetalle.price) %></h2>
        <form action="/" method="POST">
          <button class="botonDeCompra" type="submit" value="Comprar"><h3>Comprar</h3></button>
       </form>
       <% if (locals.userLogged && locals.userLogged.admi == 1) { %>
       <a href="/producto/editar/<%= productoDetalle.id%>" class="editar"><h3>Editar</h3></a>

       <form action="/producto/borrar/<%= productoDetalle.id %>?_method=DELETE" method="POST">
        <button type="submit" id="delet" class="botonDeCompra"><h3>Eliminar</h3></button>
      </form>

      <% } %> 

      
       </div>
      </div>
    </div>

    </main>

   <!-- footer -->
      <%-include ('../partials/footer') %> 
    <!-- footer -->

  
    
  </body>



</html>
