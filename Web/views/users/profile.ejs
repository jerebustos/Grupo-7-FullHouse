<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include ('../partials/head') %>

        <link rel="stylesheet" href="/css/profile.css">

    
     
      </head>
 
<body>
    <%-include ('../partials/header') %>

    
        <div class="perfil">
        <h1 style="text-align:center"> <%= user.user%> </h1>
        
        <div class="card">
          <img src="/img/users/<%= user.avatar%>"  style="width:100%">
          <h3>Nombre y Apellido</h3>
          <p class="title"><%= user.name%> <%= user.lastName%></p>
          <br>
          <h3>Email</h3>
          <p class="title"><%= user.email%></p>
          <br>
          <h3>Dirección</h3>
          <p class="title"><%= user.addres%></p>
          <br>
          <h3>Fecha de nacimiento</h3>
          <p class="title"><%= user.birth_date%></p>
         
          <form action="/usuario/salir" method="get">
          <p><button>Cerrar sesión</button></p>
        </form>
        </div>
    </div>
        
        



       <!-- footer -->
       <%-include ('../partials/footer') %> 
       <!-- footer -->
      
   </body>
   </html>